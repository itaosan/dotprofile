{
  "cleanupPeriodDays": 60,
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(cargo:*)",
      "Bash(curl:*)",
      "Bash(jq:*)",
      "Read(**)",
      "Edit(~/**)",
      "WebFetch(domain:*)",
      "Grep(**)",
      "Glob(**)",
      "LS(**)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo rm:*)",
      "Bash(format:*)",
      "Read(node_modules/**)",
      "Read(.git/**)",
      "Read(*.log)",
      "Read(dist/**)",
      "Read(build/**)"
    ]
  },
  "model": "opus",
  "hooks": {
    "PostToolUse": [{
      "matcher": "Write|Edit|MultiEdit",
      "hooks": [{
        "type": "command",
        "command": "jq -r '.tool_input.file_path | select(endswith(\".js\") or endswith(\".ts\") or endswith(\".jsx\") or endswith(\".tsx\"))' | xargs -r prettier --write"
      }]
    },
    {
      "matcher": "Bash",
      "hooks": [{
        "type": "command",
        "command": "jq -r 'if .tool_input.command | test(\"rm -rf|dd if=|:(){ :|:& };:\") then {\"decision\": \"block\", \"reason\": \"危険なコマンドは実行できません。別の方法を検討してください。\"} else empty end'"
      }]
    }]
  }
}