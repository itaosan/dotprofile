{
  "cleanupPeriodDays": 60,
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(cargo:*)",
      "Bash(curl:*)",
      "Bash(jq:*)",
      "Read(**)",
      "Edit(~/**)",
      "WebFetch(domain:*)",
      "Grep(**)",
      "Glob(**)",
      "LS(**)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo rm:*)",
      "Bash(format:*)",
      "Read(node_modules/**)",
      "Read(.git/**)",
      "Read(*.log)",
      "Read(dist/**)",
      "Read(build/**)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r 'if .tool_input.command | test(\"rm -rf|dd if=|:(){ :|:& };:\") then {\"decision\": \"block\", \"reason\": \"危険なコマンドは実行できません。別の方法を検討してください。\"} else empty end'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "windows-notify.sh -t 'Claude Code' -m 'タスクが終わりました'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-detailed.sh"
  },
  "alwaysThinkingEnabled": true,
  "model": "opus"
}
